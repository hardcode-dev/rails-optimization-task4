#!/usr/bin/env ruby
require "pathname"
require "fileutils"
include FileUtils

# path to your application root.
APP_ROOT = Pathname.new File.expand_path("..", __dir__)

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

chdir APP_ROOT do
  puts "== STARTING UP =="

  if ENV['RAILS_ENV'] == 'local_production'
    system! 'bundle exec rails assets:precompile'
    system! "foreman start -f Procfile.lp"
  else
    system! "foreman start -f Procfile.dev"
  end
end
